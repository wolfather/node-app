-var devFolder = 'dev/'
-var port = '3100'
-var serverURI = 'http://127.0.0.1:'+port+'/'

mixin devScripts(isDevelopment, file)
	if isDevelopment

		-var devFiles = ['dev/components/angular/angular.min.js','dev/components/angular-resource/angular-resource.min.js','dev/components/angular-route/angular-route.min.js','dev/js/app.main.js','dev/js/route/app.route.js','dev/js/value/app.http.value.js','dev/js/factory/app.factory.home.js','dev/js/controller/app.home.controller.js','dev/js/controller/app.product.controller.js','dev/js/controller/app.checkout.controller.js','dev/js/directive/app.directive.productitem.js','dev/js/directive/app.directive.counterandadd.js']

		each file in devFiles
			script(src='#{serverURI}#{file}')



mixin onescript()

	script(src='#{serverURI}build/js/main.min.js', type='text/javascript')